<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>GHOSTMILL &ndash; REPORT</title>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container" id="main">
      <!-- first row -->
      <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
          <div class="align-center">
            <h3>G H O S T M I L L &ndash; A N A L Y T I C S</h3>
            <h3>REPORT</h3>
          </div>
        </div>
      </div>
      <div class="row"><div class="col-lg-offset-3 col-lg-6"><hr/></div></div>
      <div class="row">
        <div class="col-lg-offset-3 col-lg-3">
          <div class="align-center">
            <h4>TOTAL VISITORS</h4>
            <h1><%= data.total.total %></h1>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="align-center">
            <h4>TOTAL UNIQUE VISITORS</h4>
            <h1><%= data.total.unique %></h1>
          </div>
        </div>
      </div>
      <div class="row"><div class="col-lg-offset-3 col-lg-6"><hr/></div></div>

      <!-- second row -->
      <% _.each (data.views, function (view_data, view_name) { %>
        <div class="row"><div class="col-lg-offset-3 col-lg-6"><h4><%= view_name %> &ndash; </h4></div></div>
        <div class="row">
          <div class="col-lg-offset-3 col-lg-3">
            <div class="align-center">
              <h4>TOTAL VISITORS</h4>
              <h1><%= view_data.total %></h1>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="align-center">
              <h4>UNIQUE VISITORS</h4>
              <h1><%= view_data.unique %></h1>
            </div>
          </div>
        </div>
        <% if (data.ticks[view_name] !== undefined) { %>
          <div class="event-bulk">
            <div class="row">
              <div class="col-lg-offset-3 col-lg-6">
                <div class="align-center">
                  <h4>&mdash;</h4>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-offset-3 col-lg-3">
                <div class="align-center">
                  <h5>EVENT</h5>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="align-center">
                  <h5>COUNT</h5>
                </div>
              </div>
            </div>
            <% _.each (data.ticks[view_name], function (tick_count, tick_event) { %>
              <div class="row">
                <div class="col-lg-offset-3 col-lg-3">
                  <div class="align-center">
                    <h4><%= tick_event %></h4>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="align-center">
                    <h4><%= tick_count %></h4>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
          <div class="row"><div class="col-lg-offset-3 col-lg-6"><hr/></div></div>
        <% }); %>

    </div>
  </body>
</html>
